<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="07" author="pipiczistvan">
        <createTable tableName="tree_board" remarks="A table that represents a tree board">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="tree_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="image_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="color" type="varchar(20)">
            </column>
            <column name="owner_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="accessibility" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="tree_board" baseColumnNames="owner_id"
                                 constraintName="tree_board_owner_id_fk"
                                 referencedTableName="user" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="tree_board" baseColumnNames="tree_id"
                                 constraintName="tree_board_tree_id_fk"
                                 referencedTableName="tree" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>